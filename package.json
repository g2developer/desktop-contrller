{
  "name": "desktop-controller",
  "version": "1.0.0",
  "description": "Desktop controller application (server)",
  "main": "main.js",
  "scripts": {
    "start": "set LANG=ko_KR.UTF-8 && chcp 65001 && electron .",
    "dev": "set LANG=ko_KR.UTF-8 && chcp 65001 && electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@jitsi/robotjs": "^0.6.16",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "iconv-lite": "^0.6.3",
    "public-ip": "^7.0.1",
    "screenshot-desktop": "^1.12.7",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "nodemon": "^2.0.22"
  },
  "build": {
    "appId": "com.desktop.controller",
    "productName": "Desktop Controller",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
